{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "lib": [
            "es5",
            "dom",
            "scripthost"
        ],
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,        
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "*"
            ],
        },
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}